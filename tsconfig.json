{
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "strict": true,
    "allowJs": false,
    "alwaysStrict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "allowUnreachableCode": false,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "strictPropertyInitialization": false,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",
    "typeRoots": ["@types", "node_modules/@types"],
  }
}
